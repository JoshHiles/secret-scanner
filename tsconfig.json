{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020"],
        "esModuleInterop": true,
        "strict": true,
        "types": ["node", "jest", "inquirer", "clear", "luxon", "nodegit", "yargs"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}
