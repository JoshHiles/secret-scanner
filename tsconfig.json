{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2021",
        "lib": ["ES2021", "DOM"],
        "esModuleInterop": true,
        "strict": true,
        "types": ["node", "inquirer", "clear", "luxon", "nodegit", "yargs", "mocha", "expect"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "include": ["src/**/*"]
}
