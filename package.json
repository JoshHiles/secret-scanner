{
    "name": "secret-scanner",
    "author": "Joshua Hiles",
    "version": "1.0.3",
    "description": "secret scanner",
    "keywords": [
        "secret",
        "scanner"
    ],
    "license": "MIT",
    "main": "./dist/secret-scanner.js",
    "bin": "./dist/secret-scanner.js",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "scripts": {
        "scan": "ts-node ./src/secret-scanner.ts scan -l testing/** -d",
        "audit": "ts-node ./src/secret-scanner.ts audit",
        "hook": "ts-node ./src/secret-scanner.ts scan --hook",
        "clean": "rimraf ./dist/ ./exec/",
        "build": "npm run clean && tsc -p .",
        "test": "jest --coverage",
        "watch": "jest --watch",
        "bundle": "tsc -p . && pkg . --out-dir ./exec/",
        "lint": "eslint .",
        "semantic-release": "semantic-release",
        "docs": "typedoc --out docs ./src",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/commit-analyzer": "^9.0.1",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^8.0.1",
        "@semantic-release/npm": "^8.0.2",
        "@semantic-release/release-notes-generator": "^10.0.2",
        "@types/clear": "^0.1.2",
        "@types/inquirer": "^8.1.3",
        "@types/jest": "^27.0.2",
        "@types/luxon": "^3.2.0",
        "@types/mock-fs": "^4.13.1",
        "@types/node": "^16.11.6",
        "@types/nodegit": "^0.27.5",
        "@types/yargs": "^17.0.5",
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "mock-fs": "^5.1.1",
        "nyc": "^15.1.0",
        "pkg": "^5.4.1",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "semantic-release": "^18.0.0",
        "ts-jest": "^27.0.7",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "clear": "^0.1.0",
        "cosmiconfig": "^7.0.1",
        "fast-glob": "^3.2.7",
        "inquirer": "^8.2.0",
        "luxon": "^3.2.1",
        "stopwatch-node": "^1.1.0",
        "tslib": "^2.3.1",
        "yargs": "^17.2.1"
    },
    "pkg": {
        "scripts": [
            "dist/**/*.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JoshHiles/secret-scanner.git"
    },
    "bugs": "https://github.com/JoshHiles/secret-scanner/labels/bug"
}
