{
    "name": "secret-scanner",
    "version": "0.0.0",
    "description": "secret scanner",
    "keywords": [],
    "license": "MIT",
    "main": "./dist/secret-scanner.js",
    "bin": "./dist/secret-scanner.js",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "scripts": {
        "scan": "ts-node ./src/secret-scanner.ts scan -l testing/** -d",
        "audit": "ts-node ./src/secret-scanner.ts audit",
        "hook": "ts-node ./src/secret-scanner.ts scan -h",
        "clean": "rimraf ./dist/ ./exec/",
        "build": "tsc -p .",
        "test": "nyc --check-coverage --lines 90 ts-mocha -p tsconfig.json tests/**/*.ts",
        "coverage": "nyc --check-coverage --lines 90 --reporter=html --reporter=text ts-mocha -p tsconfig.json tests/**/*.ts",
        "bundle": "tsc -p . && pkg . --out-dir ./exec/",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "semantic-release": "semantic-release",
        "docs": "typedoc --out docs ./src",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.0",
        "@semantic-release/commit-analyzer": "^9.0.1",
        "@semantic-release/git": "^10.0.0",
        "@semantic-release/github": "^8.0.1",
        "@semantic-release/npm": "^8.0.0",
        "@semantic-release/release-notes-generator": "^10.0.2",
        "@types/chai": "^4.2.22",
        "@types/clear": "^0.1.2",
        "@types/expect": "^24.3.0",
        "@types/inquirer": "^8.1.3",
        "@types/luxon": "^2.0.5",
        "@types/mocha": "^9.0.0",
        "@types/mock-fs": "^4.13.1",
        "@types/node": "^16.10.3",
        "@types/nodegit": "^0.27.3",
        "@types/sinon": "^10.0.4",
        "@types/sinon-chai": "^3.2.5",
        "@types/yargs": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "chai": "^4.3.4",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.0",
        "mocha": "^9.1.2",
        "mock-fs": "^5.1.1",
        "nyc": "^15.1.0",
        "pkg": "^5.3.3",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "semantic-release": "^18.0.0",
        "sinon": "^11.1.2",
        "sinon-chai": "^3.7.0",
        "ts-mocha": "^8.0.0",
        "ts-node": "^10.2.1",
        "typedoc": "^0.22.5",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "clear": "^0.1.0",
        "cosmiconfig": "^7.0.1",
        "fast-glob": "^3.2.7",
        "inquirer": "^8.2.0",
        "luxon": "^2.0.2",
        "nodegit": "^0.27.0",
        "stopwatch-node": "^1.1.0",
        "yargs": "^17.2.1"
    },
    "pkg": {
        "scripts": [
            "dist/**/*.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JoshHiles/secret-scanner.git"
    }
}
